<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="21dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 + 2 = ?"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="36dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Guess the answer..."
        android:textSize="30dp"
        android:layout_marginTop="24dp"
        android:textAlignment="center"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/btn9"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="9"
            android:textAlignment="center"
            android:background="#CCC"
            android:textColor="#000"
            android:textSize="@dimen/number_text_size"
            android:paddingHorizontal="@dimen/number_button_padding_horizontal"
            android:paddingVertical="@dimen/number_button_padding_vertical"
            android:layout_margin="@dimen/number_button_margin"/>
        <TextView
            android:id="@+id/btn8"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="8"
            android:textAlignment="center"
            android:background="#CCC"
            android:textColor="#000"
            android:textSize="@dimen/number_text_size"
            android:paddingHorizontal="@dimen/number_button_padding_horizontal"
            android:paddingVertical="@dimen/number_button_padding_vertical"
            android:layout_margin="@dimen/number_button_margin"/>
        <TextView
            android:id="@+id/btn7"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="7"
            android:textAlignment="center"
            android:background="#CCC"
            android:textColor="#000"
            android:textSize="@dimen/number_text_size"
            android:paddingHorizontal="@dimen/number_button_padding_horizontal"
            android:paddingVertical="@dimen/number_button_padding_vertical"
            android:layout_margin="@dimen/number_button_margin"/>

        <TextView
            android:id="@+id/btn6"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="6"
            android:textAlignment="center"
            android:background="#CCC"
            android:textColor="#000"
            android:textSize="@dimen/number_text_size"
            android:paddingHorizontal="@dimen/number_button_padding_horizontal"
            android:paddingVertical="@dimen/number_button_padding_vertical"
            android:layout_margin="@dimen/number_button_margin"/>
        <TextView
            android:id="@+id/btn5"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="5"
            android:textAlignment="center"
            android:background="#CCC"
            android:textColor="#000"
            android:textSize="@dimen/number_text_size"
            android:paddingHorizontal="@dimen/number_button_padding_horizontal"
            android:paddingVertical="@dimen/number_button_padding_vertical"
            android:layout_margin="@dimen/number_button_margin"/>
        <TextView
        android:id="@+id/btn4"
            android:layout_width="@dimen/number_button_width"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:text="4"
        android:textAlignment="center"
        android:background="#CCC"
        android:textColor="#000"
        android:textSize="@dimen/number_text_size"
        android:paddingHorizontal="@dimen/number_button_padding_horizontal"
        android:paddingVertical="@dimen/number_button_padding_vertical"
        android:layout_margin="@dimen/number_button_margin"/>

        <TextView
            android:id="@+id/btn3"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="3"
            android:textAlignment="center"
            android:background="#CCC"
            android:textColor="#000"
            android:textSize="@dimen/number_text_size"
            android:paddingHorizontal="@dimen/number_button_padding_horizontal"
            android:paddingVertical="@dimen/number_button_padding_vertical"
            android:layout_margin="@dimen/number_button_margin"/>
        <TextView
        android:id="@+id/btn2"
            android:layout_width="@dimen/number_button_width"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:text="2"
        android:textAlignment="center"
        android:background="#CCC"
        android:textColor="#000"
        android:textSize="@dimen/number_text_size"
        android:paddingHorizontal="@dimen/number_button_padding_horizontal"
        android:paddingVertical="@dimen/number_button_padding_vertical"
        android:layout_margin="@dimen/number_button_margin"/>
        <TextView
            android:id="@+id/btn1"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:text="1"
            android:textAlignment="center"
            android:background="#CCC"
            android:textColor="#000"
            android:textSize="@dimen/number_text_size"
            android:paddingHorizontal="@dimen/number_button_padding_horizontal"
            android:paddingVertical="@dimen/number_button_padding_vertical"
            android:layout_margin="@dimen/number_button_margin"/>

        <TextView
            android:id="@+id/btn0"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="0"
            android:textAlignment="center"
            android:background="#CCC"
            android:textColor="#000"
            android:textSize="@dimen/number_text_size"
            android:paddingHorizontal="@dimen/number_button_padding_horizontal"
            android:paddingVertical="@dimen/number_button_padding_vertical"
            android:layout_margin="@dimen/number_button_margin"/>
        <TextView
            android:id="@+id/btnDecimal"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:text="."
            android:textAlignment="center"
            android:background="#CCC"
            android:textColor="#000"
            android:textSize="@dimen/number_text_size"
            android:paddingHorizontal="@dimen/number_button_padding_horizontal"
            android:paddingVertical="@dimen/number_button_padding_vertical"
            android:layout_margin="@dimen/number_button_margin"/>
        <TextView
            android:id="@+id/btnNegative"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:text="-"
            android:textAlignment="center"
            android:background="#CCC"
            android:textColor="#000"
            android:textSize="@dimen/number_text_size"
            android:paddingHorizontal="@dimen/number_button_padding_horizontal"
            android:paddingVertical="@dimen/number_button_padding_vertical"
            android:layout_margin="@dimen/number_button_margin"/>
    </GridLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Generate"/>

        <Button
            android:id="@+id/btnValidate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Validate"/>

        <Button
            android:id="@+id/btnScore"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Score"/>

    </LinearLayout>

</LinearLayout>